<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/testOverText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/testOverLabel"
            android:textAlignment="center"
            android:textSize="42dp"
            tools:text="Test Over!" />

        <TextView
            android:id="@+id/testOverScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="28dp"
            tools:text="You scored: 0/0 (0%)" />

        <TextView
            android:id="@+id/testOverTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="28dp"
            tools:text="Time: 00:00:00:00" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/testOverBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/testOverBackLabel"
            tools:text="Back To Main Menu" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>